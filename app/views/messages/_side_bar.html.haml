.side-bar
  .chat-header
    .chat-header__box
      .chat-header__box__username
        =current_user.name
      %ul.chat-header__box__menu-icon
        %li.chat-header__box__menuicon__edit
          = link_to new_group_path(current_user) do
            = icon('fas', 'edit')
        %li.chat-header__box__menuicon__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .groups
    - current_user.groups.each do |group|
      .list
        = link_to group_messages_path(group) do
          .list__group-name
            = group.name
          .list__message
            = group.show_last_message